<fieldset>
  <% unless question.defaulted_day? %>
    <label for="response_day">Day
      <%= select_day default_for_date(prefill_value_for(question, :day)) || question.default, prefix: 'response', :prompt => '' %>
    </label>
  <% end %>
  <% unless question.defaulted_month? %>
    <label for="response_month">Month
      <%= select_month default_for_date(prefill_value_for(question, :month)) || question.default, prefix: 'response', prompt: '' %>
    </label>
  <% end %>
  <% unless question.defaulted_year? %>
    <label for="response_year">Year
      <%= select_year default_for_date(prefill_value_for(question, :year)) || question.default, prefix: 'response', prompt: '', :start_year => question.start_date.year, :end_year => question.end_date.year %>
    </label>
  <% end %>
</fieldset>
